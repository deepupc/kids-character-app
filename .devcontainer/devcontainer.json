{
  "name": "Flutter Development Environment",
  "image": "ghcr.io/cirruslabs/flutter:stable",
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  
  "postCreateCommand": "flutter pub get && flutter doctor",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "alexisvt.flutter-snippets",
        "Nash.awesome-flutter-snippets",
        "everettjf.pubspec-assist"
      ],
      "settings": {
        "dart.flutterSdkPath": "/sdks/flutter",
        "dart.debugExternalPackageLibraries": true,
        "dart.debugSdkLibraries": false,
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [80],
        "files.associations": {
          "*.dart": "dart"
        }
      }
    }
  },
  
  "forwardPorts": [3000, 8080],
  
  "remoteUser": "root",
  
  "mounts": [
    "source=${localWorkspaceFolder}/.vscode,target=/workspace/.vscode,type=bind,consistency=cached"
  ]
}
